---
import Header from "../components/Header.astro";
import Footer from "../components/Footer.astro";
import "../style/global.css";
import { GoogleFontsOptimizer } from "astro-google-fonts-optimizer";
interface Props {
  title: string;
}

const { title } = Astro.props;
---

<!doctype html>
<html lang="en" class="min-h-screen">
  <head>
    <link rel="icon" type="image/x-icon" href="/favicon.ico" />
    <meta charset="UTF-8" />
    <meta name="viewport" content="width=device-width" />
    <meta name="theme-color" content="#282828" />

    <GoogleFontsOptimizer
      url="https://fonts.googleapis.com/css2?family=Dosis&display=swap"
    />
    <meta name="generator" content={Astro.generator} />
    <meta name="geo.region" content="DZ-29" />
    <meta name="geo.placename" content="Mascara" />
    <meta name="geo.position" content="28.000027;2.999983" />
    <meta name="ICBM" content="28.000027, 2.999983" />
    <link rel="me" href="mailto:miloua23@gmail.com" />
    <link rel="canonical" href="https://miloua.com">

    <!-- HTML Meta Tags -->
    <title>{title}</title>
    <meta
      name="description"
      content="I am Miloua Mokhtar a Web Developer focusing on frontend and this is my portfolio."
    />
    <meta
      name="keywords"
      content="web development, front end developer, fullstack, portfolio"
    />
    <meta name="author" content="Miloua Mokhtar" />

    <!-- Facebook Meta Tags -->
    <meta property="og:url" content="https://miloua.com" />
    <meta property="og:type" content="website" />
    <meta property="og:title" content={title} />
    <meta
      property="og:description"
      content="I am Miloua Mokhtar a Web Developer focusing on frontend and this is my portfolio."
    />
    <meta property="og:image" content="https://miloua.com/ogImage.jpg" />

    <!-- Twitter Meta Tags -->
    <meta name="twitter:card" content="summary_large_image" />
    <meta property="twitter:domain" content="miloua.com" />
    <meta property="twitter:url" content="https://miloua.com/" />
    <meta name="twitter:title" content={title} />
    <meta
      name="twitter:description"
      content="I am Miloua Mokhtar a Web Developer focusing on frontend and this is my portfolio."
    />
    <meta name="twitter:image" content="https://miloua.com/twitterImage.jpg" />

    <!-- Meta Tags Generated via https://www.opengraph.xyz -->
    <script
      async
      is:inline
      src="https://cloud.umami.is/script.js"
      data-website-id="6cffc891-98e4-47ae-ae07-d439df038aa8"></script>
  </head>
  <body class="font-dosis min-h-screen bg-stone-50 dark:bg-stone-800">
    <Header />
    <slot />
    <footer class="sticky top-[100vh]">
      <Footer />
    </footer>

    <style is:global>
      @view-transition {
        navigation: auto; /* enabled! */
      }
      :root {
        --accent: 136, 58, 234;
        --accent-light: 224, 204, 250;
        --accent-dark: 49, 10, 101;
        --accent-gradient: linear-gradient(
          45deg,
          rgb(var(--accent)),
          rgb(var(--accent-light)) 30%,
          white 60%
        );
      }
      html {
        font-family: system-ui, sans-serif;
        background: #00000;
        background-size: 224px;
      }
      code {
        font-family:
          Menlo,
          Monaco,
          Lucida Console,
          Liberation Mono,
          DejaVu Sans Mono,
          Bitstream Vera Sans Mono,
          Courier New,
          monospace;
      }
      body {
        padding-left: 10px;
        padding-right: 10px;
      }
    </style>
  </body>
</html>
